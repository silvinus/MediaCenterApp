{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "../../node_modules/@types/"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ]
}

