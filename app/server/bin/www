#!/usr/bin/env node
"use strict";

//module dependencies
var server = require("../dist/server");
var debugg = require("debug");
var http = require("http");
var os = require('os');

var debug = debugg("mediacenter")
debugg.log = console.log.bind(console);

var dbPath = './.mediacenter/db/mediacenter';
var logPath = './.mediacenter/logs';

//create http server
debug("port: " + process.env.PORT || 8080)
var httpPort = normalizePort(process.env.PORT || 82);
var app = server.Server.bootstrap().app;
app.set("port", httpPort);
app.use(promiseify);

var httpServer = http.createServer(app).listen(httpPort);

//add error handler
httpServer.on("error", onError);

//start listening on port
httpServer.on("listening", onListening);


if(process.env.NODE_ENV === "development") {
  var conf = require('../../../gulpfile');
  debug("%s", "run gulp");
  let gulp = conf.gulp();
  conf.gulp().start('watch');
  debug("%s", "gulp is running");
}

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = "Port"; /*typeof port === "string"
    ? "Pipe " + port
    : "Port " + port;*/

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  var addr = httpServer.address();
  var bind = typeof addr === "string"
    ? "pipe " + addr
    : "http://" + addr.address + ":" + addr.port;
  debug("Listening on " + bind);
}

function promiseify(request, response, next) {
    response.promise = function(promise) {
        promise.then(function(result) {
            responseText = result;
            response.send(responseText);
        }).catch(function(error) {
            responseText = error;
            response.send(responseText);
        });
    }

    next();
}