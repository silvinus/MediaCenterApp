{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "name": "Launch via NPM",
            "program": "${workspaceRoot}\\app\\server\\bin\\www",
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": [
                "${workspaceRoot}/app/server/dist/**/*.js"
            ],
            "console": "internalConsole",
            "sourceMaps": true,
            "trace": "all"
            // "port": 5858
        },
        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "attach",
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceRoot}/app/client/dist"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 9229,
            "address": "localhost",
            "restart": false
        }
    ]
}